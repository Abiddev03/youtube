    "@wdio/appium-service": "^9.19.1",
    "@wdio/cli": "^9.19.1",
    "@wdio/cucumber-framework": "^9.19.1",
    "@wdio/globals": "^9.17.0",
    "@wdio/local-runner": "^9.19.1",
    "@wdio/spec-reporter": "^9.19.1",
    "appium": "^2.19.0",
    "appium-xcuitest-driver": "^9.10.4",
    "chai": "^4.3.7",

{
  "name": "youtube-bdd-ios",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "wdio wdio.conf.ts",
    "test:ios": "wdio wdio.conf.ts --spec ./features/search.feature",
    "test:android": "wdio wdio.android.conf.ts",
    "appium": "appium",
    "posttest": "[ -d \"allure-results\" ] && allure generate allure-results --clean -o allure-report || echo 'No test results found'",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "allure:serve": "allure serve allure-results",
    "allure:report": "npm run allure:generate && npm run allure:open",
    "test:with-report": "npm test && npm run allure:report",
    "allure:clean": "rm -rf allure-results allure-report"
  },
